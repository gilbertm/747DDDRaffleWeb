@typeparam TEntity

@inject IJSRuntime JS
@inject IStringLocalizer<SharedResource> L

<ErrorBoundary>
    <ChildContent>

        @if (!Loading && _entityList is not null)
        {
            <EhulogContainer MaxWidth="MaxWidth.False" Class="list-grid-container pa-0">
                <MudPaper Elevation="1" Class="px-3 mb-4">
                    <MudText Typo="Typo.caption" Align="Align.Left">Display</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.ViewList" aria-label="List" Class="btn-list-list">List</MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.GridView" aria-label="Grid" Class="btn-list-grid">Grid</MudIconButton>
                </MudPaper>

                <MudPaper Elevation="0" id="@typeof(TEntity).Name" Class="list-grid-group-wrapper grid-group-wrapper row">
                    @if (_entityList.Count() > 0)
                    {
                        foreach (var item in _entityList)
                        {
                            <MudItem xs="6" sm="3" md="2" Class="item mb-5">
                                @Context.Template(item)
                            </MudItem>

                        }
                    }
                </MudPaper>
            </EhulogContainer>
        }

    </ChildContent>
    <ErrorContent>
        <EhulogCustomError />
    </ErrorContent>
</ErrorBoundary>
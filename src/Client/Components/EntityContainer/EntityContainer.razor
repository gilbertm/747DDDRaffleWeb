@typeparam TEntity

@inject IJSRuntime JS
@inject IStringLocalizer<SharedResource> L

<ErrorBoundary>
    <ChildContent>

        @if (!Loading && _entityList is not null)
        {
            <EhulogContainer MaxWidth="MaxWidth.False" Class="list-grid-container pa-0">
                <MudPaper Elevation="1" Class="px-3 mb-4">
                    <MudText Typo="Typo.caption" Align="Align.Left">Display</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.ViewList" aria-label="List" Class="btn-list-list" OnClick="@(() => SetList())" Color="@(IsList ? Color.Success : Color.Surface)">List</MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.GridView" aria-label="Grid" Class="btn-list-grid" OnClick="@(() => SetGrid())" Color="@(IsGrid ? Color.Success : Color.Surface)">Grid</MudIconButton>
                </MudPaper>

                <MudPaper Elevation="0" id="@typeof(TEntity).Name" Class="list-grid-group-wrapper grid-group-wrapper row">
                    @if (_entityList.Count() > 0)
                    {
                        foreach (var item in _entityList)
                        {
                            <MudItem xs="6" sm="4" md="3" lg="2" Class="item mb-5">
                                @Context.Template(item)
                            </MudItem>

                        }
                    } else
                    {
                        <MudGrid>
                            <MudItem xs="12">
                                <MudPaper Elevation="1" Class="mb-5 px-5 py-5">
                                    <MudText Typo="Typo.h5" Color="Color.Surface" Align="Align.Center">
                                        No available loans in this location. Be the first, be a good <MudLink Typo="Typo.h5" Href="/account/login"><strong>lender</strong></MudLink>. See <MudLink Typo="Typo.h5" Href="/loan/lending/benefits"><strong>benefits</strong></MudLink>.
                                    </MudText>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    }
                </MudPaper>
            </EhulogContainer>

            <EntityContainerPager Total="@_totalItems" PageSize="@_pageSize" CurrentPage="@_currentPage" />
        }

    </ChildContent>
    <ErrorContent>
        <EhulogCustomError />
    </ErrorContent>
</ErrorBoundary>

@code {
    private void SetList()
    {
        IsList = true;
        IsGrid = false;

    }
    private void SetGrid()
    {
        IsList = false;
        IsGrid = true;

    }
    private bool IsList { get; set; }
    private bool IsGrid { get; set; } = true;
}
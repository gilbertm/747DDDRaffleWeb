<MudDialog>
    <DialogContent>
        <TimerRelogin Seconds="@Seconds" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public int Seconds { get; set; } = 10;

    void Cancel() => MudDialog.Cancel();
}
@if (InputOutputResource != default)
{

    <MudCard @onmouseover="@(() => IsImageHovered = true)" @onmouseleave="@(() => IsImageHovered = false)" Elevation="0" Class="position-relative text-center">
        <MudCardContent Class="pa-0 ma-0">
            <MudAvatar Square="true" Image="@($"{Config[ConfigNames.ApiBaseUrl]}{InputOutputResource.ImagePath}")" Style=" width:auto;height:125px;position:relative"></MudAvatar>
        </MudCardContent>

        <MudOverlay Visible="@(IsImageHovered && (InputOutputResource.ResourceStatusType < InputOutputResourceStatusType.EnabledAndVerified))" DarkBackground="true" Absolute="true" Class="text-center">
            <MudButton HtmlTag="label" DisableElevation Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" Target="_blank" StartIcon="@Icons.Filled.RemoveRedEye" Class="mb-5" OnClick="@(() => PopupFileAndManage(InputOutputResource))">
                <MudText Typo="Typo.caption">Being careful. Blowup</MudText>
                @* OnClick="@(async () => { Remove(); await OnRemoveImage.InvokeAsync();})" *@
            </MudButton><br />
            <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Filled.Cancel" Size="Size.Small" OnClick="@(() => FileAndManage("Denied"))">
                <MudText Typo="Typo.caption">Deny</MudText>
            </MudButton>
        </MudOverlay>
    </MudCard>
}
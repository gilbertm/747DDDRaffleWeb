@if (_appUserDto is { } && LoanLender is { })
{
    if (!string.IsNullOrEmpty(_appUserDto.RoleName) && _appUserDto.RoleName.Equals("Admin"))
    {
        <MudGrid Spacing="2" Justify="Justify.Center">
            <MudPaper Class="mx-1 text-center px-2 py-2">
                @if (string.IsNullOrEmpty(LoanLender.Lender.ImageUrl))
                {
                    LoanLender.Lender.ImageUrl = Config[ConfigNames.ApiBaseUrl] + "Files/Images/ApplicationUser/Default/System - Basic Default - 480x270.jpg";
                }

                <MudAvatar Image="@LoanLender.Lender.ImageUrl" Alt="@LoanLender.Lender.Id.ToString()" Style="cursor:pointer" Size="Size.Small" onclick="@(() => OpenLendersUserInspectionView(LoanLender))" />

                <MudText Typo="Typo.body2" Color="Color.Surface">@LoanLender.Lender.FirstName @LoanLender.Lender.LastName</MudText>
                <MudText Typo="Typo.body2" Color="Color.Surface">@LoanLender.Lender.Email</MudText>
                @if (!string.IsNullOrEmpty(LoanLender.Lender.PhoneNumber))
                {
                    <MudText Typo="Typo.body2" Color="Color.Surface">@LoanLender.Lender.PhoneNumber</MudText>
                }
            </MudPaper>
        </MudGrid>
    }
}
@if (AppDataService != default)
{
    @if (AppDataService.AppUser != default)
    {
        if (Loan != default)
        {
            if (Loan.LoanApplicants != default)
            {
                if (Loan.LoanApplicants.Count > 0)
                {
                    MyselfApplicant = Loan.LoanApplicants.FirstOrDefault(la => la.AppUserId.Equals(AppDataService.AppUser.Id)) ?? default!;
                }
            }

            var clickableApplicantCSS = "";
            if (Loan.LoanLenders != default)
            {
                if (Loan.LoanLenders.Count > 0)
                {
                    MyselfLender = Loan.LoanLenders.FirstOrDefault(ll => ll.LenderId.Equals(AppDataService.AppUser.Id)) ?? default!;

                    if (MyselfLender != default)
                    {
                        IsOwner = true;
                        clickableApplicantCSS = "cursor:pointer";
                    }
                }
            }

            if (Loan.LoanLessees != default)
            {
                if (Loan.LoanLessees.Count > 0)
                {
                    MyselfLessee = Loan.LoanLessees.FirstOrDefault(ll => ll.LesseeId.Equals(AppDataService.AppUser.Id)) ?? default!;
                }
            }

            if (Loan.LoanApplicants != default)
            {

                // this loan applicants that is flagged 0 = without issues
                if (Loan.LoanApplicants.Count > 0 && Loan.LoanApplicants.Where(la => la.Flag == 0).Count() > 0)
                {
                    if (!string.IsNullOrEmpty(AppDataService.AppUser.RoleName) && (new string[] { "Admin", "Lender", "Lessee" }).Contains(AppDataService.AppUser.RoleName))
                    {
                        <MudGrid Spacing="2" Justify="Justify.Center">
                            <MudItem xs="12" md="12" Class="text-center">
                                <MudText Typo="Typo.h6" Class="my-2" Color="Color.Surface">Applicants</MudText>
                                <MudGrid Justify="Justify.Center">
                                    @foreach (var item in Loan.LoanApplicants.Where(la => la.Flag == 0))
                                    {
                                        <MudPaper Elevation="0" Class="mx-1" Style="background:none!important;">
                                            @if (string.IsNullOrEmpty(item.AppUser.ImageUrl))
                                            {
                                                item.AppUser.ImageUrl = Config[ConfigNames.ApiBaseUrl] + "Files/Images/ApplicationUser/Default/System---Basic-Default---480x270.png";
                                            }

                                            @if ((new string[] { "Admin", "Lender" }).Contains(AppDataService.AppUser.RoleName))
                                            {
                                                <MudPaper Elevation="0" onclick="@(() => OpenLendersUserInspectionView(item.AppUserId))" Style="@(clickableApplicantCSS)">
                                                    <MudAvatar Image="@item.AppUser.ImageUrl" Alt="@item.AppUser.Id.ToString()" Size="Size.Large" />
                                                    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                                                        @if (MyselfLender != default)
                                                        {
                                                            <MudText Typo="Typo.body2" Color="Color.Primary">@item.AppUser.FirstName @item.AppUser.LastName</MudText>
                                                            <MudText Typo="Typo.body2" Color="Color.Primary">@item.AppUser.Email</MudText>

                                                            @if (!string.IsNullOrEmpty(item.AppUser.PhoneNumber))
                                                            {
                                                                <MudText Typo="Typo.body2" Color="Color.Primary">@item.AppUser.PhoneNumber</MudText>
                                                            }
                                                        }
                                                    </MudHidden>
                                                </MudPaper>

                                            }
                                            else
                                            {
                                                <MudAvatar Image="@item.AppUser.ImageUrl" Alt="@item.AppUser.Id.ToString()" Size="Size.Large" />

                                                @if (MyselfApplicant != default && item.AppUser.Id.Equals(MyselfApplicant.AppUser.Id))
                                                {
                                                    <MudText Typo="Typo.body2" Color="Color.Surface">@item.AppUser.FirstName @item.AppUser.LastName</MudText>
                                                    <MudText Typo="Typo.body2" Color="Color.Surface">@item.AppUser.Email</MudText>

                                                    @if (!string.IsNullOrEmpty(item.AppUser.PhoneNumber))
                                                    {
                                                        <MudText Typo="Typo.body2" Color="Color.Surface">@item.AppUser.PhoneNumber</MudText>
                                                    }

                                                    @* <MudIcon Icon="@Icons.Filled.FrontHand" Color="Color.Warning"></MudIcon> *@
                                                    <MudText Typo="Typo.body2" Color="Color.Warning">Me</MudText>
                                                }
                                            }

                                        </MudPaper>
                                    }
                                </MudGrid>
                                @* <MudText Typo="Typo.caption" Class="mt-2 d-block" Style="display:block;width:100%;" Color="Color.Success">@Loan.LoanApplicants.Count</MudText> *@
                            </MudItem>
                        </MudGrid>
                    }
                }
            }
        }
    }

}


@inject IStringLocalizer<Profile> L

<MudGrid>
    <MudItem xs="12" sm="12" md="12">
       <MudText Typo="Typo.h6" Align="Align.Center">Minimum of two (2) valid identifications.</MudText>
       <MudList>
           <MudListItem Style="padding-bottom:5px;font-size:small">Identifications are manually checked and validators will approved according to the quality of these documents provided.</MudListItem>
           <MudListItem Style="padding-bottom:5px;font-size:small">Ensuring that eHulog users are legitimate and intents are for the betterment of majority, it is hereby imperative to provide real identification for full verification.</MudListItem>
           <MudListItem Style="padding-bottom:5px;font-size:small">Full verification of these documents will ensure usage of the ehulog system.</MudListItem>
       </MudList>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard Elevation="25">
            <MudCardContent Style="padding:0px!important">
                <div class="d-flex justify-center mb-4">
                    <MudAvatar Square="true" Color="Color.Error" Style="width:100%;height:300px;">Passport</MudAvatar>
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center">Passport</MudText>
                <MudText Align="Align.Center">Description</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center">
                <InputFile id="fileInput" capture hidden accept=".jpg,.jpeg,.png" />
                <div style="padding-bottom:20px">
                    <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                               StartIcon="@Icons.Filled.CloudUpload" for="fileInput">
                        @L["Upload"]
                    </MudButton>
                </div>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard Elevation="25">
            <MudCardContent Style="padding:0px!important">
                <div class="d-flex justify-center mb-4">
                    <MudAvatar Square="true" Color="Color.Error" Style="width:100%;height:300px;">National Identification</MudAvatar>
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center">National Identification</MudText>
                <MudText Align="Align.Center">Country's main identification</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center">
                <InputFile id="fileInput" capture hidden accept=".jpg,.jpeg,.png" />
                <div style="padding-bottom:20px">
                    <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                               StartIcon="@Icons.Filled.CloudUpload" for="fileInput">
                        @L["Upload"]
                    </MudButton>
                </div>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard Elevation="25">
            <MudCardContent Style="padding:0px!important">
                <div class="d-flex justify-center mb-4">
                    <MudAvatar Square="true" Color="Color.Error" Style="width:100%;height:300px;">Government valid identification</MudAvatar>
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center">Any valid government recognized identification</MudText>
                <MudText Align="Align.Center">Any valid government recognized identification</MudText>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center">
                <InputFile id="fileInput" capture hidden accept=".jpg,.jpeg,.png" />
                <div style="padding-bottom:20px">
                    <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small"
                               StartIcon="@Icons.Filled.CloudUpload" for="fileInput">
                        @L["Upload"]
                    </MudButton>
                </div>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
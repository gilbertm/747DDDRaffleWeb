            <MudButton Href="/catalog/front/loans/anon" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Style="justify-content:left;box-shadow:none !important;text-transform:none;background:transparent;"><MudText Typo="Typo.body2">Loan</MudText></MudButton>
            <MudButton Href="/about-us" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Style="justify-content:left;box-shadow:none !important;text-transform:none;background:transparent;"><MudText Typo="Typo.body2">About</MudText></MudButton>
            <MudButton Href="/contact-us" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Style="justify-content:left;box-shadow:none !important;text-transform:none;background:transparent;"><MudText Typo="Typo.body2">Contact</MudText></MudButton>

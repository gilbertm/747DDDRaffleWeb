        <ActivatorContent>
            <MudIconButton Icon="@Icons.Filled.Person" Style="@($"color:{Colors.Shades.White};")" />
        </ActivatorContent>
        <ChildContent>
            <div class="py-2" style="min-width: 220px">
                <MudMenuItem OnClick="Profile">
                    <div class="d-flex">
                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Login" />
